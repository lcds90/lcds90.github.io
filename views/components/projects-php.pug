#toggle-animation-php(uk-grid, class="uk-child-width-1-2@m").uk-margin-top.uk-padding-small.uk-child-width-1-1.uk-text-center.uk-grid-collapse
    div.uk-flex.uk-flex-column.uk-background-muted(class="uk-margin@m")
        each project in projects.php
            a.uk-button.uk-button-default.uk-margin-bottom.uk-padding-remove(href=`#modal-${project.id}` uk-toggle='') #{project.title}
            div(id=`modal-${project.id}`, uk-modal='')
                .uk-modal-dialog
                    button.uk-modal-close-default(type='button' uk-close='')
                    .uk-modal-header
                        h2.uk-modal-title #{project.title}
                        br
                        .uk-flex.uk-child-width-1-1(class="uk-child-width-1-3@m")
                            a.uk-button.uk-button-primary(href=`${project.link.deploy}`, target="_blank") Ver deploy
                            a.uk-button.uk-button-default(href=`${project.link.git}`, target="_blank") Ver c√≥digo
                            a.uk-button.uk-button-danger.uk-modal-close(href='#') Fechar
                    .uk-modal-body.uk-background-secondary
                        .uk-child-width-1-1(class="uk-child-width-1-2@m", uk-grid)
                            div
                                | #{project.desc[0]}
                            .uk-text-small
                                | #{project.desc[1]}
                    .uk-modal-footer.uk-background-muted
                        .uk-position-relative.uk-visible-toggle.uk-light(tabindex='-1' uk-slideshow='min-height: 600; animation: fade')
                            ul.uk-slideshow-items
                                - for (let i = 0; i < project.img.length; i++) {
                                        li.uk-flex.uk-flex-center.uk-flex-top
                                            img(src=`${project.img[i].src}` alt=`${project.img[i].alt}`)
                                - }
                            a.uk-background-secondary.uk-position-center-left.uk-position-small.uk-hidden-hover(href='#' uk-slidenav-previous='' uk-slideshow-item='previous')
                            a.uk-background-secondary.uk-position-center-right.uk-position-small.uk-hidden-hover(href='#' uk-slidenav-next='' uk-slideshow-item='next')
    .uk-child-width-1-1
        span Desenvolvido em PHP
        img.uk-responsive-width.uk-responsive-height.reduce(src="img/php.png", alt="")